@using MobileStores.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}




<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MobileStore-Demo</title>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/owl.carousel.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @{KHACHHANG kh = (KHACHHANG)Session["Account"];}
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="user-menu">
                        <ul>
                            @if (Session["Account"] == null)
                            {
                                <li><a href="@Url.Action("Signin","Account")"><i class="fa fa-user"></i> Tài khoản</a></li>
                            }

                            @if (Session["Account"] != null)
                            {
                                <li><a href="#"><i class="fa fa-user"></i>Xin chào, <strong>@kh.HoTen</strong></a></li>
                                <li><a href="@Url.Action("Logout","Account")"><i class="fas fa-sign-out-alt"></i> Đăng Xuất</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End header area -->

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="@Url.Action("Index","MobileStore")"><img src="~/Content/img/logo/logo.png" style="width: 250px; height: 100px;"></a></h1>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="shopping-item">
                        <a href="@Url.Action("Cart","Cart")">Giỏ hàng - <span class="cart-amunt"> @String.Format("{0:0,0}", ViewBag.Tongtien) VND</span> <i class="fa fa-shopping-cart"></i> <span class="product-count">@ViewBag.Tongsoluong</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index")">Trang chủ</a></li>
                        <li>
                            <a href="@Url.Action("Dienthoai", "MobileStore")">Điện Thoại</a>
                        </li>
                        <li><a href="@Url.Action("MTB", "MobileStore")">Máy tính bảng</a></li>
                        <li><a href="@Url.Action("Cart", "Cart")">Giỏ Hàng</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- End mainmenu area -->

    <div class="slider-area">
        <!-- Slider -->
        <div class="container">
            <div class="block-slider block-slider4">
                <ul class="" id="bxslider-home4">
                    <li>
                        <img src="~/Content/img/bigImg/BigImg1.jpg" alt="Slide" style="width: 600px; height: 250px;">
                        <div class="caption-group">
                            <h2 class="caption title">
                                Samsung <span class="primary">Note 20 <strong>Ultra</strong></span>
                            </h2>
                            <h4 class="caption subtitle">Đỉnh cao <b>công nghệ</b></h4>
                            <a class="caption button-radius" href="#"><span class="icon"></span>Đặt ngay</a>
                        </div>
                    </li>
                    <li>
                        <img src="~/Content/img/bigImg/BigImg2.jpg" alt="Slide" style="width: 600px; height: 250px;">
                        <div class="caption-group">
                            <h2 class="caption title">
                                Iphone <span class="primary">12 <strong>Series</strong></span>
                            </h2>
                            <h4 class="caption subtitle">Tặng 50gb icloud</h4>
                            <a class="caption button-radius" href="#"><span class="icon"></span>Đặt ngay</a>
                        </div>
                    </li>
                    <li>
                        <img src="~/Content/img/bigImg/BigImg5.jpg" alt="Slide" style="width: 600px; height: 250px;">
                        <div class="caption-group">
                            <h2 class="caption title">
                                oppo <span class="primary">Reno <strong>5g</strong></span>
                            </h2>
                            <h4 class="caption subtitle">Giảm ngay 1 triệu</h4>
                            <a class="caption button-radius" href="#"><span class="icon"></span>Đặt ngay</a>
                        </div>
                    </li>
                    <li>
                        <img src="~/Content/img/bigImg/BigImg4.jpg" alt="Slide" style="width: 600px; height: 250px;">
                        <div class="caption-group">
                            <h2 class="caption title">
                                Samsung <span class="primary">Galaxy <strong>S21</strong></span>
                            </h2>
                            <h4 class="caption subtitle">Trả góp 0%</h4>
                            <a class="caption button-radius" href="#"><span class="icon"></span>Đặt ngay</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <!-- ./Slider -->
    </div> <!-- End slider area -->
    <div class="promo-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo1">
                        <i class="fa fa-refresh"></i>
                        <p>Đổi trả trong 1 tuần</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo2">
                        <i class="fa fa-truck"></i>
                        <p>Miễn phí giao hàng</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo3">
                        <i class="fa fa-lock"></i>
                        <p>Bảo trì & Sửa chữa</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="single-promo promo4">
                        <i class="fa fa-gift"></i>
                        <p>Sản phẩm mới nhất</p>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End promo area -->

    <div class="brands-area">
        <div class="zigzag-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="brand-wrapper">
                            <div id="brand-list-chude" class="brand-list">
                                @Html.Action("Chude", "MobileStore")

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End brands area -->
    <div class="maincontent-area">
        <div class="zigzag-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="latest-product">
                            <h2 class="section-title">Sản Phẩm mới</h2>
                            @Html.Action("Laydienthoaimoi", "MobileStore")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="products">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <br />
                            <h2 class="section-title">Sản Phẩm</h2>
                            @Html.Action("Dienthoais", "MobileStore")
                            @Html.Action("MTBs", "MobileStore")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>Đồ án môn học: <b>Lập trình Web</b></p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="footer-card-icon">
                        <i class="fa fa-cc-discover"></i>
                        <i class="fa fa-cc-mastercard"></i>
                        <i class="fa fa-cc-paypal"></i>
                        <i class="fa fa-cc-visa"></i>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer bottom area -->
    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>
    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/Scripts/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/Scripts/main.js"></script>

    <!-- Slider -->
    <script type="text/javascript" src="~/Scripts/bxslider.min.js"></script>
    <script type="text/javascript" src="~/Scripts/script.slider.js"></script>
</body>
</html>

