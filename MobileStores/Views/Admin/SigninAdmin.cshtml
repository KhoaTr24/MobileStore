
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MobileStore-Demo</title>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">

    <!-- Custom CSS -->

    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="wrapper">
        <header>Đăng nhập Admin</header>
        <h4 style="color:red; text-align:center">@ViewBag.ThongBao</h4>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div class="field email">
                <div class="input-area">
                    <p>Nhập Email:</p>
                    @Html.TextBox("UserAdmin")
                    <h6 style="color:red; text-align:right">@ViewBag.ThongBao1</h6>
                </div>
            </div>
            <br />
            <div class="field password">
                <div class="input-area">
                    <p>Nhập Mật Khẩu:</p>
                    @Html.TextBox("PassAdmin")
                    <h6 style="color:red; text-align:right">@ViewBag.ThongBao2</h6>
                </div>
            </div>
            <br />
            <input type="submit" value="Đăng nhập">
        }
    </div>
</body>
</html>
